@model IndexViewModel

@{
    ViewData["Title"] = "Welcome!";
}

@{
    var apartments = Model.Apartments;
    var apartment1 = apartments.Any() ? apartments[0] : null;
    var apartment2 = apartments.Any() ? apartments[1] : null;
    var apartment3 = apartments.Any() ? apartments[2] : null;
}
@if (!apartments.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome, you need/rent a flat?</h1>
        <p class="lead">Currently we don't have available apartments, please feel free to add one!</p>
        <hr class="my-4">
        <p>To Add apartment - click the button below</p>
        <p class="lead">
            <a asp-controller="Apartment" asp-action="Add" class="btn btn-primary btn-lg"  role="button">Add Apartment</a>
        </p>
    </div>
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        @if (apartment1 != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="@apartment1.ImageUrl" alt="@apartment1.ApartmentType @apartment1.Year @apartment1.Location">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="text-info"><a asp-controller="Apartment" asp-action="Details" asp-route-id="@apartment1.Id" asp-route-information="@(apartment1.ApartmentType +" "+apartment1.Location)">@apartment1.ApartmentType @apartment1.Year</a></h5>
                  
                </div>
            </div>
        }
        @if (apartment2 != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@apartment2.ImageUrl" alt="@apartment2.ApartmentType @apartment2.Year @apartment2.Location">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="text-info"><a asp-controller="Apartment" asp-action="Details" asp-route-id="@apartment2.Id" asp-route-information="@(apartment2.ApartmentType +" "+apartment2.Location)">@apartment2.ApartmentType @apartment2.Year</a></h5>
                   
                </div>
            </div>
        }
        @if (apartment3 != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@apartment3.ImageUrl" alt="@apartment3.ApartmentType @apartment3.Year @apartment3.Location">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="text-info"><a asp-controller="Apartment" asp-action="Details" asp-route-id="@apartment3.Id" asp-route-information="@(apartment3.ApartmentType +" "+apartment3.Location)">@apartment3.ApartmentType @apartment3.Year</a></h5>

                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="jumbotron">
    <div class="row">
        <h2 class="col-md-4 text-center">
            @Model.AllApartments Apartments
        </h2>
        <h2 class="col-md-4 text-center">
            @Model.AllUsers Users
        </h2>
        <h2 class="col-md-4 text-center">
            @Model.AllRents Rents
        </h2>
    </div>
</div>
