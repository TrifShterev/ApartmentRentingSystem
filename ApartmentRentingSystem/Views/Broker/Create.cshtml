@model BecomeBrokerFormModel

@{
    ViewData["Title"] = "Become Broker";
}

<div class="row">
    <div class="offset-md-2 col-md-8">
        <h2>Become a broker</h2>

        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter your full name here...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone numer +359887...">
                <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
            </div>

            <input type="submit" class="btn btn-primary" value="Save"/>
        </form>
    </div>
</div>